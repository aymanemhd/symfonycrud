{% block body %}
        <h4 style="text-align: center;">Afficher Article</h4>
<br>
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ article.Nom }}</td>
            </tr>
            <tr>
